{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["deno.window", "dom", "esnext"],
		"strict": true
	},
	"importMap": "import_map.json",
	"lint": {
		"include": ["./*.ts", "./src/*.ts"],
		"exclude": ["./*.d.ts", "./types/*.d.ts"],
		"rules": {
			"tags": ["recommended"],
			"include": ["ban-untagged-todo"],
			"exclude": ["no-unused-vars"]
		}
	},
	"fmt": {
		"include": ["./*.ts", "./src/*.ts"],
		"exclude": ["./*.d.ts", "./types/*.d.ts"],
		"useTabs": true,
		"lineWidth": 100,
		"indentWidth": 2,
		"singleQuote": true,
		"proseWrap": "preserve"
	},
	"test": {
		"include": ["./test/*.ts"],
		"exclude": []
	}
}
